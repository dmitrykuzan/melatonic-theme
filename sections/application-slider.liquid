      </div>
    </div>

    <div class="application-slider__wrapper">
      <div class="swiper application-slider__swiper-image">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <img
              src="{{ 'application-slider-1.jpg' | asset_url }}"
              width="670"
